{
  "name": "katalys/paseto",
  "description": "Platform-Agnostic Security Tokens",
  "license": "ISC",
  "type": "library",
  "autoload": {
    "psr-4": {
      "ParagonIE\\Paseto\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ParagonIE\\Paseto\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7|^8",
    "paragonie/constant_time_encoding": "^2",
    "paragonie/sodium_compat": "^1.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^6|^7|^8|^9",
    "vimeo/psalm": "^3|^4"
  },
  "scripts": {
    "full-test": [
      "@static-analysis",
      "@test"
    ],
    "static-analysis": "psalm",
    "test": "phpunit"
  }
}
